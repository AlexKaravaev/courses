\RequirePackage[T2A]{fontenc}
\RequirePackage[russian]{babel}  

% требуется для оформления ссылок
\RequirePackage[pdftex,unicode,colorlinks,linkcolor=blue,citecolor=red,urlcolor=blue,bookmarksopen,pdfhighlight=/N]{hyperref}

% отвечают за набор формул и др. мат. конструкций
\RequirePackage{amscd,amsmath,amssymb,amsfonts,textcomp,latexsym,pb-diagram}

% помогают при наборе таблиц
\RequirePackage{longtable,array,colortbl}

% цвета, рисунки и пр.
\RequirePackage[pdftex]{graphicx}
\RequirePackage{epstopdf}
\RequirePackage{floatrow,floatflt}
\RequirePackage{wrapfig}

% нужен для замены импортного "рис:" на наше "рис."
\RequirePackage[labelsep=period]{caption}

% настраиваем страничку
\RequirePackage[a4paper,left=15mm,right=15mm,top=15mm,bottom=15mm,headsep=5mm,headheight=7mm]{geometry}

% а без этого колонтитулы не получатся
